﻿﻿@model MedLinked.Models.PatientDto

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Patient Details</h2>

<!--Link to to back to the patients list page-->
<a class="btn btn-danger my-3" href="/Patient/List">Go back to Patients</a>

<!--Form to create a new patient-->
<form method="POST" action="/Patient/Update/@Model.PatientID">
    <input type="text" style="display:none;" name="PatientID" value="@Model.PatientID" />

    <div class="form-group pb-2">
        <label>First Name:</label>
        <input type="text" name="PatientFirstName" class="form-control" id="PatientFirstName" placeholder="Enter the firstname" value="@Model.PatientFirstName" />
    </div>
    <div class="form-group pb-2">
        <label>Last Name:</label>
        <input type="text" name="PatientLastName" class="form-control" id="PatientLastName" placeholder="Enter the lastname" value="@Model.PatientLastName" />
    </div>
    <div class="form-group pb-2">
        <label>Date of Birth:</label>
        <input type="datetime" name="PatientDOB" class="form-control" id="PatientDOB" placeholder="Enter the DOB" value="@Model.PatientDOB" />
    </div>
    <div class="form-group pb-2">
        <label>Gender:</label>
        <input type="text" name="PatientGender" class="form-control" id="PatientGender" placeholder="Enter the gender" value="@Model.PatientGender" />
    </div>
    <div class="form-group pb-2">
        <label>Nationality:</label>
        <input type="text" name="PatientNationality" class="form-control" id="PatientNationality" placeholder="Enter the nationality" value="@Model.PatientNationality" />
    </div>
    <div class="form-group pb-2">
        <label>Email:</label>
        <input type="text" name="PatientEmail" class="form-control" id="PatientEmail" placeholder="Enter the email" value="@Model.PatientEmail" />
    </div>
    <div class="form-group pb-2">
        <label>Phone:</label>
        <input type="text" name="PatientPhone" class="form-control" id="PatientPhone" placeholder="Enter the phone" value="@Model.PatientPhone" />
    </div>
    <div>
        <input type="submit" value="Update Patient" />
    </div>
</form>