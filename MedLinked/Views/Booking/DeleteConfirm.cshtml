﻿﻿<!--Using the BookingDTO model class-->﻿
@model MedLinked.Models.BookingDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Confirm Booking Delete</h2>

<div class="p-5 mb-4 bg-body-tertiary rounded-3">
    <div class="container-fluid text-bg-dark rounded-3 pt-5 pb-4 ps-5">
        <h1 class="fs-3 fw-bold pb-3 text-danger">Are you sure you want to delete this booking?</h1>
        <p class="col-md-8 fs-5"><b>Booking ID:</b>@Model.BookingID</p>

        <div class="row d-flex ">
            <div class="col d-flex justify-content-end">
                <form action="/Booking/Delete/@Model.BookingID" method="POST">
                    <input class="btn btn-danger btn-m mt-4" type="submit" value="Confirm Delete" />
                </form>
            </div>
            <div class="col">
                <!--Link to go back to the bookings list-->
                <!--The href link to the file on the project-->
                <a class="btn btn-secondary btn-m mt-4" href="/Booking/List">Cancel</a>
            </div>
        </div>
    </div>
</div>