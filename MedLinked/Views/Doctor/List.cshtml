﻿﻿@model IEnumerable<MedLinked.Models.DoctorDto>
@{
    ViewBag.Title = "List";
}
<div class="title list_title">
    <h2>Doctors List</h2>
    <a class="btn btn-primary" href="/Doctor/New">+ New Doctor</a>

</div>

<div class="container patient_list_container">
    <!--For each customers in our model-->
    @foreach (var Doctor in Model)
    {
        <!-- Bootstrap card for each customer -->
        <div class="card mb-3 list_card hover-effect">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-8">
                        <!-- Heading with a link to the customer details page -->
                        <h3 class="card-title fs-4 text-uppercase mb-3 font-weight-bold">@Doctor.DoctorFirstName @Doctor.DoctorLastName </h3>
                        <!-- Customer's email -->
                        <p class="card-text lh-1"><strong>Phone:</strong> @Doctor.DoctorPhone</p>
                        <p class="card-text lh-1"><strong>Email:</strong> @Doctor.DoctorEmail</p>
                        @*
        <p class="card-text lh-1"><strong>Specialization:</strong> @Doctor.DoctorSpecialization</p>*@

                    </div>
                    <div class="col-sm-4 d-flex justify-content-end flex-column">
                        <!-- Image (add your image here) -->
                        <img src="~/Content/images/medlinked_pp.jpg" alt="Doctor Image" class="img-fluid rounded">
                        <a class="btn btn-primary mt-2 d-flex justify-content-between align-content-center" href="/Doctor/Details/@Doctor.DoctorID">details <i class="fa-solid fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


